<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">

  <!-- 콘솔 출력용 Appender -->
  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <!-- 패턴 설정 -->
      <pattern>
        %d{yy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %-36logger{36} - %msg%n
      </pattern>
      <charset>UTF-8</charset>
    </encoder>
  </appender>

  <!-- 로그 파일 기록용 Appender (선택사항) -->
  <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>logs/discodeit.log</file>

    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <!-- 일별 로그 파일 -->
      <fileNamePattern>logs/discodeit-%d{yyyy-MM-dd}.log</fileNamePattern>
      <maxHistory>30</maxHistory> <!-- 최근 30일 유지 -->
    </rollingPolicy>

    <encoder>
      <pattern>
        %d{yy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %-36logger{36} - %msg%n
      </pattern>
      <charset>UTF-8</charset>
    </encoder>
  </appender>

  <!-- 루트 로거 설정 -->
  <root level="DEBUG">
    <appender-ref ref="CONSOLE"/>
    <appender-ref ref="FILE"/>
  </root>

</configuration>
